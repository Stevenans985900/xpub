{
    "key": "study",
    "author": "J. Voigt",
    "version": "0.0.1",
    "description": "prompts to present when creating a new study",
    "prompts": [
        {
            "key": "name",
            "text": "Name of study?",
            "info": "Your study name should only consist of alphanumeric characters and underscores.",
            "example": "pig_chewing_study",
            "require": true,
            "type": "open",
            "enum": [],
            "store": [
                "xromm"
            ],
            "regex": "\\w{3}"
        },
        {
            "key": "desc",
            "text": "Description of study?",
            "info": "Provide a short description of the purpose and aim of this study.",
            "example": "A study that looks at how pigs chew stuff.",
            "require": true,
            "type": "open",
            "enum": [],
            "store": [
                "xromm"
            ],
            "regex": "\\w{3}"
        },
        {
            "key": "pi",
            "text": "Name of PI?",
            "info": "Specify the Principal Investigator for this study.",
            "example": "Callum Ross",
            "require": true,
            "type": "enum_open",
            "enum": [
                "Callum Ross"
            ],
            "store": [
                "xromm"
            ],
            "regex": "^\\d$"
        },
        {
            "key": "leader",
            "text": "Name of study leader?",
            "info": "Specify the lab member most responsible for conducting this study.",
            "example": "Kazutaka Takashi",
            "require": true,
            "type": "enum_open",
            "enum": [
                "Callum Ross",
                "Kazutaka Takashi"
            ],
            "store": [
                "xromm"
            ],
            "regex": "^\\d$"
        },
        {
            "key": "meta_public",
            "text": "Metadata for this study is public?",
            "info": "Can the metadata for this study be made publicly available?", 
            "example": true,
            "require": true,
            "type": "bool",
            "enum": [],
            "store": [
                "xromm"
            ],
            "regex": ""
        },
        {
            "key": "data_public",
            "text": "Data for this study is public?",
            "info": "Can the data files for this study be made publicly available?",
            "example": false,
            "require": true,
            "type": "bool",
            "enum": [],
            "store": [
                "xromm"
            ],
            "regex": ""
        },
        {
            "key": "notes",
            "text": "Additional notes or comments? (hit return for none)",
            "info": "Here you can provide additional info pertaining to this study that might be useful for future reference.",
            "example": "See `http://github.com/rcc-uchicago/xpub` for more info.",
            "require": false,
            "type": "open",
            "enum": [],
            "store": [
                "xromm"
            ],
            "regex": "\\w?"
        }
    ]
}
